<UserControl x:Class="ParkingManagement.View.UserControls.CustomPasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParkingManagement.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="242">
    <Grid Background="White">
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="15"></Setter>
                <Setter Property="FontWeight" Value="DemiBold"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Height="30">
            <Label Name="lbText"></Label>
        </Grid>
        <Grid Grid.Column="1">
            <PasswordBox Name="tbPassword"  FontSize="15" Background="Transparent" BorderThickness="0 0 0 1" Panel.ZIndex="1" ></PasswordBox>
            <!--<TextBox Name="tbPlaceholder" Foreground="LightGray" FontSize="15" Background="Transparent" BorderThickness="0"></TextBox>-->
        </Grid>
    </Grid>
</UserControl>
